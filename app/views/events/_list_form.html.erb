<%= simple_form_for event do |e| %>
  <%= e.input :name, label: 'Event Name' %>
  <%= e.input :location, label: 'Event Location' %>
  <%= e.input :date_and_time, label: 'Event Date and Time' %>
  <%= e.input :category, collection: ["Club night","Concert","Festival","Travel","Sport","Society","Socials"], label: 'Event Category' %>
  <%= e.simple_fields_for :ticket do |t| %>
    <%= t.input :price, label: 'Price' %>
    <%= t.input :description, label: 'Description' %>
    <%= t.input :photo, as: :file, label: 'Upload Ticket' %>
  <% end %>
  <%= e.submit "List Ticket" %>
<% end %>
