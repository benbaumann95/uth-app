
<div class="ticket-banner-container" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.5) 50%), url('http://res.cloudinary.com/uthabc/image/upload/v1520422012/zrwmgtopq6fgwgn7pvqs.jpg');">




  <div class="show-ticket-container">
    <div class="banner-venue">
      <h1><%= @event.name %> @ <%= @event.address.capitalize %></h1>
      <%= @event.date_and_time.strftime('%a %d %b').upcase %>
      <div class="banner-event-quantity-tickets">
        <div class="available-tickets-container">
          <div class="available-tickets-text">
            <% if @event.quantity == 0 %>
            <p>
              Sorry, there are no tickets currently available!
            </p>
            <% elsif @event.quantity == 1 %>
            <p>
              Only <strong><%= @event.quantity %></strong> ticket remaining!
            </p>
            <% else %>
            <p>
              There are <strong><%= @event.quantity %></strong> tickets for this event remaining
            </p>
            <% end %>
          </div>
        </div>
      </div>

      <% @tickets.each do |ticket| %>

      <div class="container-upcoming-tickets">
        <div class="container-body">
          <div class="ticket-container">
            <div class="ticket-unique">
              <div class="ticket-left">
                <%= cl_image_tag current_user.photo, width: 80, height: 80, class: 'circle-avatar' %>
                <div class="ticket-left-container">

                </div>
              </div>
              <div class="ticket-description">
                <div class="ticket-description-container">
                  <div class="ticket-link-to-show-page">
                    <%= ticket.event.name %>
                  </div>
                  <div class="ticket-details">
                    <%= ticket.description %>
                  </div>
                </div>

              </div>

              <div class="ticket-price">
                <div class="price">
                  Â£<%= ticket.price %>
                  <%= link_to ticket_bookings_path(ticket.id), method: :post do %>
                  <i class="fas fa-shopping-cart"></i>
                  <% end %>

                  <% end %>
                </div>
              </div>

            </div>
          </div>
        </div>
      </div>





    </div>
    <div
    id="map"
    data-markers="<%= @markers.to_json %>"
    ></div>

  </div>



</div>






<%= javascript_include_tag "https://maps.googleapis.com/maps/api/js" %>
<%= javascript_pack_tag "map" %>






